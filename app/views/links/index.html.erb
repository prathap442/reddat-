<p id="notice"><%= notice %></p>

<div class="container"> 
<div class = "row"> 
<div class="col-md-6">
<h1>Links</h1>  
<table class="table" border="2">
      <thead>
        <tr>
          <th width="10"><strong>Title</strong></th>
          <th><strong>Url</strong></th>
          <th><strong>Comment</strong></th>
        </tr>
      </thead>
      
      <tbody>
        <%@links.each do |link|%>
            <tr>
                <td><%=link_to link.title,link_path(link.id)%></td>
                <td><%=link_to link.url.truncate(20),"#{link.url}" %></td>
                <td><%=link_to "Upvote",like_link_path(link),method: :put%><%=link.get_upvotes.size%>||
                  <%=link_to "Downvote",dislike_link_path(link),method: :put%><%=link.get_downvotes.size%>
                </td>
            </tr>
        <%end%>
      </tbody>
</table>
</div>
</div>    
</div>
<br/>
<%=link_to "Add A New Link",new_link_path%>